{
  "name": "markserv-contrib-mod.http-404",
  "version": "1.0.5",
  "description": "Serves a 404 page when no file is found",
  "repository": "git@github.com:f1lt3r/markserv-contrib-mod.http-404",
  "main": "lib/mod.http-404.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "f1lt3r",
  "license": "GPL-3.0",
  "devDependencies": {
    "xo": "^0.17.0"
  },
  "xo": {
    "esnext": true,
    "globals": [
      "it",
      "describe",
      "beforeEach"
    ],
    "rules": {
      "import/no-dynamic-require": 0
    },
    "overrides": [
      {
        "files": "**/Markconf.*",
        "rules": {
          "unicorn/filename-case": [
            "error",
            {
              "case": "pascalCase"
            }
          ]
        }
      }
    ]
  },
  "dependencies": {
    "bluebird": "^3.4.6",
    "handlebars": "^4.0.5"
  }
}
